NAME = main

SRCCCCC = main.cpp

CCCCCC = c++

CCCCCFLAGS = -Wall -Werror -Wextra -std=c++98

OBJS = $(SRCCCCC:.cpp=.o)

all : $(NAME)

.cpp.o:
	$(CCCCCC) $(CCCCCFLAGS) -c $^ -o $@

$(NAME) : $(OBJS)
	$(CCCCCC) $(CCCCCFLAGS) $(SRCCCCC) -o $(NAME)

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re : fclean all

.PHONY: clean fclean all re